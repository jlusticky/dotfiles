[user]
	name = Josef Lusticky
	email = josef@lusticky.cz
[alias]
	co = checkout
	permission-reset = !git diff -p -R --no-color | grep -E \"^(diff|(old|new) mode)\" --color=never | git apply
	pristine = !git reset --hard && git clean -dffx
	list-foreign = "!if [ -f .gitignore ]; then git ls-files --others --ignored --exclude-from=.gitignore; else git ls-files --others; fi"
	last = log -1 HEAD
	st = status
	br = branch
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
[sendemail]
	smtpEncryption = tls
	smtpServer = smtp.gmail.com
	smtpUser =
	smtpPass =
	smtpServerPort = 587
[difftool "eaglediff"]
	cmd = eaglediff $LOCAL $REMOTE
[difftool]
	prompt = false
[diff]
	tool = meld
[merge]
	tool = meld
[push]
	default = current
[format]
	signoff = true
[pull]
	ff = only
